{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Heavy Metal Playlist",
  "identifier": "com.heavymetalplaylist.app",
  "version": "1.0.0",
  "build": {
    "frontendDist": "../dist/heavy-metal-playlist/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "ng serve",
    "beforeBuildCommand": "ng build"
  },
  "app": {
    "windows": [
      {
        "title": "Heavy Metal Playlist",
        "width": 1920,
        "height": 1080,
        "minWidth": 1280,
        "minHeight": 720,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
